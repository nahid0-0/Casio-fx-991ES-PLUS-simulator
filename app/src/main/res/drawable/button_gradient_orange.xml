<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Bottom shadow band (pressed, crisp) -->
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="#33000000"/>
                    <size android:height="2dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- Crisp top inner line -->
            <item android:top="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#0EFFFFFF"/>
                    <size android:height="1dp"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="#e67c00" android:endColor="#cc6f00" android:angle="135"/>
                    <stroke android:width="1dp" android:color="#9a5a00"/>
                    <corners android:radius="4dp"/>
                    <padding android:bottom="1dp"/>
                </shape>
            </item>
            <!-- Subtle inner darkening gradient (inset) -->
            <item android:left="2dp" android:right="2dp" android:top="1dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#00000000" android:endColor="#14000000" android:angle="270"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Bottom shadow band (normal, crisp) -->
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="#22000000"/>
                    <size android:height="3dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- Inner crisp top line (slight inset) -->
            <item android:top="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#11FFFFFF"/>
                    <size android:height="1dp"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <!-- Hard left highlight and right shadow lines inset from border -->
            <item android:left="1dp" android:right="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#14FFFFFF"/>
                    <size android:width="1dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item android:right="1dp" android:left="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#22000000"/>
                    <size android:width="1dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- Bottom inner shadow line (inset) -->
            <item android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#22000000"/>
                    <size android:height="1dp"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <!-- Subtle inner darkening gradient (inset) -->
            <item android:left="2dp" android:right="2dp" android:top="1dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#00000000" android:endColor="#14000000" android:angle="270"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#de7a00"/>
                    <stroke android:width="1dp" android:color="#a56600"/>
                    <corners android:radius="4dp"/>
                    <padding android:bottom="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
