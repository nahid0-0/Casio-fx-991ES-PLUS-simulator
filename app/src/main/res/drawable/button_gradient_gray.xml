<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed: darker surface, bottom-weighted shadow bands, no top glow -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Bottom shadow band -->
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="#33000000" />
                    <size android:height="2dp" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <!-- Bottom inner rim (crisp) -->
            <item android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#22000000" />
                    <size android:height="1dp" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <!-- Base surface -->
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="#4a5a6b" android:endColor="#3a4a5b" android:angle="135" />
                    <stroke android:width="1dp" android:color="#2b3946" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <!-- Subtle inner darkening gradient (inset) -->
            <item android:left="2dp" android:right="2dp" android:top="1dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#00000000" android:endColor="#14000000" android:angle="270"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Normal: bottom-weighted shading, crisp rim -->
    <item>
        <layer-list>
            <!-- Bottom shadow band -->
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="#22000000" />
                    <size android:height="3dp" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <!-- Bottom inner rim (crisp) -->
            <item android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#1A000000" />
                    <size android:height="1dp" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <!-- Surface -->
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="#4d5d6c" android:endColor="#3d4c5b" android:angle="135" />
                    <stroke android:width="1dp" android:color="#2b3946" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <!-- Subtle inner darkening gradient (inset) -->
            <item android:left="2dp" android:right="2dp" android:top="1dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#00000000" android:endColor="#14000000" android:angle="270"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
