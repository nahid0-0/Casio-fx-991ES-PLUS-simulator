<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Bottom shadow band -->
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="#33000000"/>
                    <size android:height="2dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- Subtle inner darkening gradient (inset) -->
            <item android:left="2dp" android:right="2dp" android:top="1dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#00000000" android:endColor="#14000000" android:angle="270"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <!-- Base surface (pressed darker) with enhanced border -->
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="#324353" android:endColor="#233343" android:angle="135"/>
                    <stroke android:width="2dp" android:color="#263542"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- Inner border shadow ring -->
            <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#00000000"/>
                    <stroke android:width="1dp" android:color="#22000000"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Bottom shadow band -->
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="#22000000"/>
                    <size android:height="3dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- Subtle inner darkening gradient (inset) -->
            <item android:left="2dp" android:right="2dp" android:top="1dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#00000000" android:endColor="#14000000" android:angle="270"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <!-- Surface with enhanced border -->
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="#3a4a5a" android:endColor="#2a3a4a" android:angle="135"/>
                    <stroke android:width="2dp" android:color="#263542"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- Inner border shadow ring -->
            <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#00000000"/>
                    <stroke android:width="1dp" android:color="#22000000"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
