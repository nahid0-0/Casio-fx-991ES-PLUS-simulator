<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button text styles -->
    <style name="BtnSecondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">#ffff00</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BtnMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BtnMainNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Base container style for grid buttons -->
    <style name="GridCellBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@animator/btn_raise</item>
    </style>

    <!-- Function section button -->
    <style name="FuncBtn" parent="GridCellBase">
        <item name="android:background">@drawable/button_gradient_gray</item>
    </style>

    <!-- Number section button -->
    <style name="NumBtn" parent="GridCellBase">
        <item name="android:background">@drawable/button_gradient_number</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Gray operator button in number section -->
    <style name="GrayBtn" parent="GridCellBase">
        <item name="android:background">@drawable/button_gradient_gray</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Green action button (DEL/AC) -->
    <style name="GreenBtn" parent="GridCellBase">
        <item name="android:background">@drawable/button_gradient_green</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Orange action button (= / Ans) -->
    <style name="OrangeBtn" parent="GridCellBase">
        <item name="android:background">@drawable/button_gradient_orange</item>
        <item name="android:layout_margin">3dp</item>
        <!-- Remove cast shadow to avoid blur on orange keys -->
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
