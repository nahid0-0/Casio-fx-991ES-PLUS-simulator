<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Calculator Panel (fill screen) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/calculator_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="6dp">

        <!-- Header: Brand/Model/Subtitle/Edition -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.12"
                android:text="CASIO"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="fx-991ES PLUS"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="NATURAL-V.P.A.M."
                android:textColor="#CCFFFFFF"
                android:textSize="8sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtEdition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:gravity="end"
                android:text="2nd edition"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Display Area (stretchable) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:background="@drawable/display_area_bg"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="8dp"
            android:minHeight="160dp">

            <!-- Status bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/status_bar_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R"
                    android:textColor="#00ff00"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Math ▲"
                    android:textColor="#00ff00"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Main display (expression left, result right) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/main_display_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:minHeight="130dp">

                <!-- Expression (left) -->
                <TextView
                    android:id="@+id/txtDisplay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="monospace"
                    android:maxLines="4"
                    android:text="√2 + √3\n―――\n2   3"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Result (right) -->
                <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="end|center_vertical"
                    android:paddingStart="12dp"
                    android:text="5√2\n――\n6"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Button Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:dividerPadding="0dp"
            android:orientation="vertical">

            <!-- Top row: SHIFT | ALPHA | D-PAD | MODE/SETUP | ON -->

            <!-- Function Section: 6 columns x 4 rows -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:columnCount="5"
                android:padding="2dp"
                android:rowCount="1"
                android:useDefaultMargins="false">

                <!-- SHIFT -->
                <TextView
                    android:id="@+id/btnShift"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/btn_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="SHIFT"
                    android:textColor="#ffff00"
                    android:textSize="8sp"
                    android:textStyle="bold" />

                <!-- ALPHA -->
                <TextView
                    android:id="@+id/btnAlpha"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/btn_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="ALPHA"
                    android:textColor="#ffffff"
                    android:textSize="8sp"
                    android:textStyle="bold" />

                <!-- Directional Pad -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="3"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="-3dp"
                    android:background="@drawable/directional_pad_bg">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="3"
                        android:padding="6dp"
                        android:rowCount="3"
                        android:useDefaultMargins="false">

                        <!-- (0,0) empty -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1" />

                        <!-- (0,1) Up -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:background="@drawable/dpad_arrow_bg"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="↑"
                            android:textColor="#00ff00"
                            android:textSize="8sp" />

                        <!-- (0,2) empty -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1" />

                        <!-- (1,0) Left -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:background="@drawable/dpad_arrow_bg"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="←"
                            android:textColor="#00ff00"
                            android:textSize="8sp" />

                        <!-- (1,1) center empty -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1" />

                        <!-- (1,2) Right -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:background="@drawable/dpad_arrow_bg"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="→"
                            android:textColor="#00ff00"
                            android:textSize="8sp" />

                        <!-- (2,0) empty -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1" />

                        <!-- (2,1) Down -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:background="@drawable/dpad_arrow_bg"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="↓"
                            android:textColor="#00ff00"
                            android:textSize="8sp" />

                        <!-- (2,2) empty -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1" />
                    </GridLayout>
                </FrameLayout>

                <!-- MODE / SETUP -->
                <LinearLayout
                    android:id="@+id/btnMode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/btn_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MODE"
                        android:textColor="#ffffff"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SETUP"
                        android:textColor="#ffff00"
                        android:textSize="6sp" />
                </LinearLayout>

                <!-- ON -->
                <TextView
                    android:id="@+id/btnOn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:background="@drawable/button_gradient_green"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="ON"
                    android:textColor="#ffffff"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:columnCount="6"
                android:padding="2dp"
                android:rowCount="4"
                android:useDefaultMargins="false">

                <!-- Row 1 -->
                <LinearLayout
                    android:id="@+id/btnCalc"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="SOLVE =" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="CALC" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnRadicalTemplate"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="∑" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="√̄□" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSquare"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="%" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="x²" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnPower"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="x!" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="x⁻¹" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLog"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="10ˣ" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="log" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnDerivative"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="∫" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="d/dx" />
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:id="@+id/btnFraction"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="□/□" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="□/□" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSqrt"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="³√" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="√" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnCube"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="x³" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="x³" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnPowerXY"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="ʸ√x" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="xʸ" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLn"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="eˣ" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="ln" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnDec"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="DEC" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="DEC" />
                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:id="@+id/btnNegate"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="r⟨1 r∠1" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="(-)" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnAbs"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="∠ •₉₉" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="Abs" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnHyp"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="P₆" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="hyp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSin"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="sin⁻¹" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="sin" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnCos"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="cos⁻¹" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="cos" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnTan"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="tan⁻¹" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="tan" />
                </LinearLayout>

                <!-- Row 4 -->
                <LinearLayout
                    android:id="@+id/btnRcl"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="STO ← i" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="RCL" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnEng"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="ENG" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="ENG" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnParenOpen"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="%" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="(" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnParenClose"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="X" />

                    <TextView
                        style="@style/BtnMain"
                        android:text=")" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnMPlus"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="M- M" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="M+" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnBin"
                    style="@style/FuncBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="BIN" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="BIN" />
                </LinearLayout>
            </GridLayout>

            <!-- Number Section: 6 columns x 4 rows -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="211dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:columnCount="6"
                android:padding="2dp"
                android:rowCount="4"
                android:useDefaultMargins="false">

                <!-- Row 1 -->
                <LinearLayout
                    android:id="@+id/btn7"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="CONST" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="7" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn8"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="CONV" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="8" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn9"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="CLR" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="9" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnDel"
                    style="@style/GreenBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="INS" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="DEL" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnAC"
                    style="@style/GreenBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="OFF" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="AC" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnMatrix"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="A" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="MATRIX" />
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:id="@+id/btn4"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="VECTOR" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="4" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn5"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn6"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnMultiply"
                    style="@style/GrayBtn">

                    <TextView
                        style="@style/BtnMain"
                        android:text="×" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnDivide"
                    style="@style/GrayBtn">

                    <TextView
                        style="@style/BtnMain"
                        android:text="÷" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnOct"
                    style="@style/GrayBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="B" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="OCT" />
                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:id="@+id/btn1"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="STAT" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn2"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="CMPLX" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn3"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="BASE" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnAdd"
                    style="@style/GrayBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="Pol" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSubtract"
                    style="@style/GrayBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="Rec" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="−" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnNpr"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="C" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="nPr" />
                </LinearLayout>

                <!-- Row 4 -->
                <LinearLayout
                    android:id="@+id/btn0"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="Rnd" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnDot"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="Ran#" />

                    <TextView
                        style="@style/BtnMainNumber"
                        android:text="•" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnExp"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="D" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="×10ˣ" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnAns"
                    style="@style/OrangeBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="E" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="Ans" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnEquals"
                    style="@style/OrangeBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="DRG▸" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="=" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnNcr"
                    style="@style/NumBtn">

                    <TextView
                        style="@style/BtnSecondary"
                        android:text="nCr" />

                    <TextView
                        style="@style/BtnMain"
                        android:text="nCr" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
